{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "testCustomVar": "randomValue"
  },
  "tasks": [
    {
      "run": "copy",
      "options": {
        "testOption": "{testCustomVar}",
        "testExpr": "(min 2 6)"
      },
      "target": "(tmpdir)/{baseName}",
      "metadata": {
        "match.types": [
          "exr"
        ],
        "match.vars": {
          "imageType": [
            "sequence"
          ]
        }
      },
      "tasks": [
        {
          "run": "sequenceThumbnail",
          "target": "(tmpdir)/{name}.jpg",
          "metadata": {
            "match.types": [
              "testCrawler"
            ],
            "match.vars": {
              "imageType": [
                "sequence"
              ],
              "testVariable": true
            },
            "wrapper.name": "python",
            "wrapper.options": {
              "user": ""
            }
          }
        }
      ]
    }
  ]
}
